<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtName"
        android:layout_width="359dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/user"
        android:ems="10"
        android:hint="    Put name to add"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:backgroundTint="#208CC9"
        android:text="Add"
        app:layout_constraintStart_toStartOf="@+id/txtName"
        app:layout_constraintTop_toTopOf="@+id/btnRemove" />

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#208CC9"
        android:text="Remove"
        app:layout_constraintEnd_toStartOf="@+id/bntCancel"
        app:layout_constraintStart_toEndOf="@+id/btnAdd"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <Button
        android:id="@+id/bntCancel"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:backgroundTint="#208CC9"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="@+id/txtName"
        app:layout_constraintTop_toTopOf="@+id/btnRemove" />

    <ListView
        android:id="@+id/ListName"
        android:layout_width="413dp"
        android:layout_height="485dp"
        android:layout_marginTop="52dp"
        android:background="#6FBDA1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRemove" />

</androidx.constraintlayout.widget.ConstraintLayout>